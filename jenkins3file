pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION = 'us-east-1'
        S3_BUCKET = 'my-static-website-bucket'
    }

    stages {
        stage('Clone Repo') {
            steps {
                git 'https://github.com/YOUR_USERNAME/my-static-website.git'
            }
        }

        stage('Deploy to S3') {
            steps {
                sh 'aws s3 sync . s3://$S3_BUCKET --delete'
            }
        }
    }
}
